#grma1075 94731
class AppSettings: 
    version = 1.0
    logging_level ="INFO"

    @staticmethod
    def configure_setting(obj, key, value):
        if hasattr(obj, key): 
            setattr(obj, key, value)
        else: 
            pass
        
settings = AppSettings()

print(f"Version: {settings.version}, Logging Level: {settings.logging_level}")

AppSettings.configure_setting(settings,"version", 2.0)
AppSettings.configure_setting(settings, "logging_level", "DEBUG")
print(f"Version: {settings.version}, Logging Level: {settings.logging_level}")

AppSettings.configure_setting(settings, "non_existent_key", "ERROR")

print(f"Existiert 'non_existent_key'? {hasattr(settings, 'non_existent_key')}")